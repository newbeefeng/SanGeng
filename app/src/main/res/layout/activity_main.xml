<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    tools:context=".MainActivity"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:scrollbars="none"
    android:padding="0dp"
    >

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical"
        >

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="290dp"
            android:background="@drawable/home_bg"
            >

            <ImageView
                android:layout_width="21dp"
                android:layout_height="26dp"
                android:src="@drawable/menu"
                android:layout_toRightOf="@+id/text1"
                android:layout_marginLeft="240dp"
                android:layout_marginTop="15dp"
                />

            <TextView
                android:id="@+id/text1"
                android:layout_height="wrap_content"
                android:layout_width="wrap_content"
                android:textStyle="bold"
                android:textSize="15dp"
                android:textColor="#fff"
                android:text=" Welcome back ！"
                android:lineSpacingExtra="5dp"
                android:letterSpacing="0.04"
                android:fontFamily="sans-serif-black"
                android:layout_marginTop="20dp"
                android:layout_marginLeft="5dp"/>


            <RelativeLayout

                android:layout_height="50dp"
                android:layout_width="match_parent"
                android:layout_gravity="center_vertical"
                android:layout_marginTop="120dp"
                android:layout_marginRight="5dp">

                <EditText
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_marginLeft="10dp"
                    android:layout_marginRight="10dp"
                    android:background="@drawable/round_editstyle"
                    android:hint="Search"
                    android:paddingLeft="20dp"
                    android:paddingTop="15dp"
                    android:paddingBottom="10dp"
                    android:textSize="15sp"
                    android:textStyle="bold"
                    android:shadowRadius="20dp"/>

                <ImageView
                    android:layout_width="17dp"
                    android:layout_height="17dp"
                    android:layout_alignParentRight="true"
                    android:layout_marginTop="15dp"
                    android:layout_marginRight="20dp"
                    android:src="@drawable/search_1" />

            </RelativeLayout>


        </RelativeLayout>

        <RelativeLayout
            android:layout_height="wrap_content"
            android:layout_width="match_parent">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="热门课程"
                android:textStyle="bold"
                android:textSize="23dp"
                android:textColor="#000000"
                android:letterSpacing="0.03"
                android:layout_marginTop="5dp"
                android:layout_marginLeft="12dp" />

            <androidx.cardview.widget.CardView
                android:id="@+id/card1"
                android:layout_width="match_parent"
                android:layout_height="120dp"
                app:cardBackgroundColor="#d9c5e7"
                app:cardCornerRadius="20dp"
                app:cardElevation="5dp"
                android:layout_marginTop="45dp"
                android:layout_marginBottom="20dp"
                android:layout_marginLeft="15dp"
                android:layout_marginRight="15dp"
                >

                <RelativeLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:gravity="center_vertical"
                    android:paddingLeft="25dp"
                    >
                    <ImageView
                        android:id="@+id/course1"
                        android:layout_width="65dp"
                        android:layout_height="65dp"
                        android:src="@drawable/stack"/>

                    <TextView
                        android:id="@+id/c1.1"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="数据结构(C语言)"
                        android:layout_toRightOf="@+id/course1"
                        android:textSize="20dp"
                        android:textColor="#000000"
                        android:layout_marginLeft="30dp"/>


                    <TextView
                        android:id="@+id/c1.2"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_toRightOf="@+id/course1"
                        android:layout_below="@+id/c1.1"
                        android:text="清晰图片版"
                        android:layout_marginLeft="30dp"
                        android:layout_marginTop="5dp"
                        android:textSize="12dp"/>

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_toRightOf="@+id/course1"
                        android:layout_below="@id/c1.2"
                        android:text="已更新10期"
                        android:layout_marginLeft="30dp"
                        android:layout_marginTop="5dp"
                        android:textSize="12dp"/>

                    <ImageView
                        android:id="@+id/right1"
                        android:layout_width="20dp"
                        android:layout_height="20dp"
                        android:src="@drawable/right"
                        android:layout_toRightOf="@+id/c1.2"
                        android:layout_marginLeft="150dp"
                        android:layout_marginTop="30dp"
                        />

                </RelativeLayout>
            </androidx.cardview.widget.CardView>

            <androidx.cardview.widget.CardView
                android:id="@+id/card2"
                android:layout_below="@+id/card1"
                android:layout_width="match_parent"
                android:layout_height="120dp"
                app:cardBackgroundColor="#d9c5e7"
                app:cardCornerRadius="20dp"
                app:cardElevation="5dp"
                android:layout_marginBottom="20dp"
                android:layout_marginLeft="15dp"
                android:layout_marginRight="15dp">

                <RelativeLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:gravity="center_vertical"
                    android:paddingLeft="25dp">

                    <ImageView
                        android:id="@+id/course2"
                        android:layout_width="65dp"
                        android:layout_height="65dp"
                        android:src="@drawable/java"/>

                    <TextView
                        android:id="@+id/c2.1"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Java基础"
                        android:layout_toRightOf="@+id/course2"
                        android:textSize="20dp"
                        android:textColor="#000000"
                        android:layout_marginLeft="30dp"/>

                    <TextView
                        android:id="@+id/c2.2"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_toRightOf="@+id/course2"
                        android:layout_below="@+id/c2.1"
                        android:text="清晰图片版"
                        android:layout_marginLeft="30dp"
                        android:layout_marginTop="5dp"
                        android:textSize="12dp"/>

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_toRightOf="@+id/course2"
                        android:layout_below="@id/c2.2"
                        android:text="已更新10期"
                        android:layout_marginLeft="30dp"
                        android:layout_marginTop="5dp"
                        android:textSize="12dp"/>

                    <ImageView
                        android:id="@+id/right2"
                        android:layout_width="20dp"
                        android:layout_height="20dp"
                        android:src="@drawable/right"
                        android:layout_toRightOf="@+id/c2.2"
                        android:layout_marginLeft="150dp"
                        android:layout_marginTop="30dp"
                        />

                </RelativeLayout>
            </androidx.cardview.widget.CardView>

            <androidx.cardview.widget.CardView
            android:id="@+id/card3"
            android:layout_below="@+id/card2"
            android:layout_width="match_parent"
            android:layout_height="120dp"
            app:cardBackgroundColor="#d9c5e7"
            app:cardCornerRadius="20dp"
            app:cardElevation="5dp"
            android:layout_marginBottom="20dp"
            android:layout_marginLeft="15dp"
                android:layout_marginRight="15dp">

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:gravity="center_vertical"
                android:paddingLeft="25dp">

                <ImageView
                    android:id="@+id/course3"
                    android:layout_width="65dp"
                    android:layout_height="65dp"
                    android:src="@drawable/cpu"/>

                <TextView
                    android:id="@+id/c3.1"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="计算机组成原理"
                    android:layout_toRightOf="@+id/course3"
                    android:textSize="20dp"
                    android:textColor="#000000"
                    android:layout_marginLeft="30dp"/>

                <TextView
                    android:id="@+id/c3.2"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_toRightOf="@+id/course3"
                    android:layout_below="@+id/c3.1"
                    android:text="清晰图片版"
                    android:layout_marginLeft="30dp"
                    android:layout_marginTop="5dp"
                    android:textSize="12dp"/>

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_toRightOf="@+id/course3"
                    android:layout_below="@id/c3.2"
                    android:text="已更新10期"
                    android:layout_marginLeft="30dp"
                    android:layout_marginTop="5dp"
                    android:textSize="12dp"/>

                <ImageView
                    android:id="@+id/right3"
                    android:layout_width="20dp"
                    android:layout_height="20dp"
                    android:src="@drawable/right"
                    android:layout_toRightOf="@+id/c3.2"
                    android:layout_marginLeft="150dp"
                    android:layout_marginTop="30dp"
                    />

            </RelativeLayout>
        </androidx.cardview.widget.CardView>

            <androidx.cardview.widget.CardView
                android:id="@+id/card4"
                android:layout_below="@+id/card3"
                android:layout_width="match_parent"
                android:layout_height="120dp"
                app:cardBackgroundColor="#d9c5e7"
                app:cardCornerRadius="20dp"
                app:cardElevation="5dp"
                android:layout_marginBottom="20dp"
                android:layout_marginLeft="15dp"
                android:layout_marginRight="15dp">

                <RelativeLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:gravity="center_vertical"
                    android:paddingLeft="25dp">

                    <ImageView
                        android:id="@+id/course4"
                        android:layout_width="65dp"
                        android:layout_height="65dp"
                        android:src="@drawable/cpu"/>

                    <TextView
                        android:id="@+id/c4.1"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="计算机组成原理"
                        android:layout_toRightOf="@+id/course4"
                        android:textSize="20dp"
                        android:textColor="#000000"
                        android:layout_marginLeft="30dp"/>

                    <TextView
                        android:id="@+id/c4.2"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_toRightOf="@+id/course4"
                        android:layout_below="@+id/c4.1"
                        android:text="清晰图片版"
                        android:layout_marginLeft="30dp"
                        android:layout_marginTop="5dp"
                        android:textSize="12dp"/>

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_toRightOf="@+id/course4"
                        android:layout_below="@id/c4.2"
                        android:text="已更新10期"
                        android:layout_marginLeft="30dp"
                        android:layout_marginTop="5dp"
                        android:textSize="12dp"/>

                    <ImageView
                        android:id="@+id/right4"
                        android:layout_width="20dp"
                        android:layout_height="20dp"
                        android:src="@drawable/right"
                        android:layout_toRightOf="@+id/c4.2"
                        android:layout_marginLeft="150dp"
                        android:layout_marginTop="30dp"
                        />

                </RelativeLayout>
            </androidx.cardview.widget.CardView>

        </RelativeLayout>
    </LinearLayout>

</LinearLayout>